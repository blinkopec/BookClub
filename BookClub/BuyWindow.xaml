<Window x:Class="BookClub.BuyWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BookClub"
        mc:Ignorable="d"
        Title="BookClub" Height="400" Width="400"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="60"/>
            <RowDefinition/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>

        <Button x:Name="BackButton" Click="BackButton_Click" Grid.Row="0" HorizontalAlignment="Left" Height="35" Content="Назад"/>

        <Label Content="Покупка" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold" FontSize="20" />
        <ComboBox x:Name="PickUpPointBox" Width="100" Grid.Row="2" HorizontalAlignment="Center" Height="40"/>
        
        <Button x:Name="BuyButton" Click="BuyButton_Click" Grid.Row="3" Content="Заказать" HorizontalAlignment="Center" VerticalAlignment="Center" Width="60"/>
    </Grid>
</Window>
